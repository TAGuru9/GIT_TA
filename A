$innerFolder = "C:\TA_PeopleSoft-1.0-SNAPSHOT\TA_PeopleSoft-1.0-SNAPSHOT"
$outerFolder = "C:\TA_PeopleSoft-1.0-SNAPSHOT"

# 1. Move all files and folders from inner to outer
Get-ChildItem -Path $innerFolder | ForEach-Object {
    $destination = Join-Path $outerFolder $_.Name
    if (Test-Path $destination) {
        Write-Host "Overwriting existing item: $destination"
        Remove-Item -Path $destination -Recurse -Force
    }
    Move-Item -Path $_.FullName -Destination $outerFolder
}

# 2. Remove the empty inner folder
Remove-Item -Path $innerFolder -Force -Recurse

Write-Host "âœ… All files moved to $outerFolder and inner folder deleted."

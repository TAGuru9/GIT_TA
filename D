DECLARE @Year INT = YEAR(GETDATE());

SELECT
    T.TS_NAME,
    T.TS_STEPS,
    T.TS_PATH,
    T.TS_SUBJECT AS Subject_ID,
    A.AL_DESCRIPTION AS Subject_Name,
    A.AL_ABSOLUTE_PATH AS Subject_Folder_Path,
    T.TS_STATUS,
    T.TS_RESPONSIBLE,
    T.TS_CREATION_DATE
FROM [amfc_isqat_db].[td].[TEST] T
LEFT JOIN [amfc_isqat_db].[td].[ALL_LISTS] A
       ON T.TS_SUBJECT = A.AL_ITEM_ID
WHERE T.TS_USER_03 = 'Client Letter'
  AND YEAR(T.TS_CREATION_DATE) = @Year
ORDER BY A.AL_ABSOLUTE_PATH, T.TS_NAME;
